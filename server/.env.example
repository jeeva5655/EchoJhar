# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/echojhar
# Production: mongodb+srv://username:password@cluster.mongodb.net/echojhar

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Google Services
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_MAPS_API_KEY=AIzaSyCnJzKoDw-s6yCo4S6fvYTK4K5vRCcuHyQ
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_secret

# Payment Gateways (Primary Revenue)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Twilio (SMS/WhatsApp for Emergency & Marketing)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@echojhar.com
FROM_NAME=EchoJhar Tourism

# Cloud Storage (for VR content, images)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=echojhar-media

# Business Logic - Revenue Settings
MARKETPLACE_COMMISSION_RATE=0.15
TICKET_PLATFORM_FEE=0.05
VR_TOUR_PREMIUM_PRICE=299
DIGIPIN_POINTS_TO_RUPEE_RATIO=0.5
REFERRAL_BONUS_POINTS=100

# Business Analytics
ENABLE_ANALYTICS=true
ANALYTICS_BATCH_SIZE=100

# Rate Limiting (Prevent Abuse)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_BLOCKCHAIN=false
ENABLE_D2M_BROADCAST=false
ENABLE_REAL_GEMINI_AI=true
ENABLE_PAYMENT_GATEWAY=true
